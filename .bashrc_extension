#!/bin/bash

#
#
#   Include this file at the end of .bashrc
#
#

# ====== 

if [ -f `pwd`/home_environment/.bash_aliases_he ]; then
    . `pwd`/home_environment/.bash_aliases_he
fi

# ====== 

cd ()
{
    builtin cd $* && ls -al
}

# ====== 

if test `whoami` = 'root' ; then
    PS1='\[\033[01;34m\][\[\033[01;31m\]\u\[\033[01;34m\]@\[\033[01;33m\]\h\[\033[01;34m\]] \[\033[01;31m\]\w\n\[\033[00m\]'
else
    PS1='\[\033[01;34m\][\u@\[\033[01;33m\]\h\[\033[01;34m\]] \[\033[01;31m\]\w\n\[\033[00m\]'
fi

# ====== 

export PATH=$PATH:`pwd`/home_environment/bin

