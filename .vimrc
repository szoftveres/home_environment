syntax on
set showmatch     " zaro zarojelhez megmutatja a parjat
set ruler         " show the cursor position all the time
set expandtab           " expandt tab
set laststatus=2          " enable the status
set nosmartindent
set tabstop=4
set nostartofline " ugrasoknal ne menjen a sor elejere
set noautoindent    " always set autoindenting on
set showcmd       " display incomplete commands
set incsearch     " do incremental searching
set hlsearch
let c_space_errors = 1

" nmap new old
nmap ] <c-]>
nmap [ <c-t>


